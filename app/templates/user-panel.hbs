<div class='panel'>

  {{#if viewingScripts}}

  <div class='row'>
    <div class='col-xs-12'>
      <div class='scripts-list'>

        {{render 'entries' model.entries}}

      </div>
    </div>
  </div>

  {{else}}

  <div class='row'>
    <div class='col-xs-12'>
      <div class='friends-list'>

        {{render 'friends' model.user}}

      </div>
    </div>
  </div>

  {{/if}}

</div>

<div class='row'>
  <div class='col-xs-12'>
    <div class='panel-buttons-left pull-left'>
      <button type='button' class='btn btn-success' {{action 'newEntry'}}>+ New</button>
      <button type='button' class='btn btn-default' {{action 'viewScripts'}}>Scripts</button>
      <button type='button' class='btn btn-default' {{action 'viewFriends'}}>Friends</button>
    </div>
    <div class='panel-buttons pull-right'>
      <button type='button' class='btn btn-default' {{action 'logout'}}>Logout</button>
    </div>
  </div>
</div>


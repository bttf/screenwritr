{{#if session.isAuthenticated}}

  {{help-panel hideHelpPanel=hideHelpPanel toggleHelpPanel='toggleHelpPanel'}}

  {{save-file 
      toggleSaveFile='toggleSaveFile' 
      script=script 
      hideSaveFile=hideSaveFile 
      transition='transition'
      transitionRoute=saveFileRoute 
      saved=saved 
      error=error
  }}

{{/if}}

<div {{bind-attr class=':header session.isAuthenticated:app-bar'}}>

  {{#if session.isAuthenticated}}

    <div class='row'>
      <div class='col-xs-12'>
        <div class='headline'>{{#link-to 'index'}}screenwritr{{/link-to}}</div>
      </div>
      <div class='col-xs-12'>
        {{menu-bar saveAndTransition='toggleSaveFile' script=script logout='logout' help='toggleHelpPanel' saved=saved error=error}}
      </div>
    </div>


  {{else}}

    <div class='headline'>{{#link-to 'index'}}screenwritr{{/link-to}}</div>

  {{/if}}

</div>

{{outlet}}


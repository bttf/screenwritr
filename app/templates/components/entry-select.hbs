<div class='col-xs-12'>
  <div class='row'>
    <div class='col-xs-7'>

      <div class='title'>
        {{entry.title}}
      </div>

      <div class='info'>
        <div class='author'>
          {{entry.userName}}
        </div>

        <div class='modified'>
          {{moment-time entry.modified}}
        </div>
      </div>

    </div>
    <div class='col-xs-5'>

      <a href='#' data-toggle='modal' data-target='.confirm-delete-modal-sm'>Delete</a>

    </div>
  </div>
</div>

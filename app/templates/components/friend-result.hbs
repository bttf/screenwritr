<div class='col-xs-3'>
  <img class='img-circle img-responsive' src='http://chewbonga.com/chewbonga.jpg'>
</div>

<div class='col-xs-9 friend-result-name'>
  {{friend.fullName}}

  <div class='friend-controls'>
    {{#if isPending}}

      Friend request pending: 
      <a href='#' {{action 'acceptFr'}}>Accept</a> - 
      <a href='#' {{action 'denyFr'}}>Deny</a>

    {{else}}

      {{#unless sameUserOrFriend}}
        
        {{#if alreadyPending}}

          Friend request pending

        {{else}}

          <a href='#' {{action 'sendFr'}}>Send friend request</a>

        {{/if}}

      {{else}}
        
        {{#if currentFriend}}
          Friend
        {{/if}}

      {{/unless}}

    {{/if}}
  </div>
</div>

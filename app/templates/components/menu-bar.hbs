<!-- outside page flow -->
{{share-menu
    toggleShareMenu='toggleShareMenu'
    toggleScriptUnlisted='toggleScriptUnlisted'
    showShareMenu=showShareMenu
    script=script
}}
<!-- end outside page flow -->

<ul class='list-inline'>
  <li>
    <a href='#' class='btn btn-link' data-toggle='tooltip' data-placement='bottom' title='New' {{action 'newScript'}}>
      <i class='fa fa-file-o'></i>
    </a>
  </li>
  <li>
    <a href='#' class='btn btn-link' data-toggle='tooltip' data-placement='bottom' title='Open' {{action 'openScript'}}>
      <i class='fa fa-folder-open'></i>
    </a>
  </li>
  <li>
    <a href='#' class='btn btn-link' data-toggle='tooltip' data-placement='bottom' title='Save' {{action 'saveScript'}}>
      <i class='fa fa-save'></i>
    </a>
  </li>
  <li>
    {{#if autoSaveEnabled}}
      <a href='#' class='btn btn-link' data-toggle='tooltip' data-placement='bottom' title='AutoSave: On' {{action 'toggleAutoSave'}}>
      Auto-Save <i {{bind-attr class=':fa autoSaveEnabled:fa-check:fa-close'}}></i>
    </a>
    {{else}}
      <a href='#' class='btn btn-link' data-toggle='tooltip' data-placement='bottom' title='AutoSave: Off' {{action 'toggleAutoSave'}}>
      Auto-Save <i {{bind-attr class=':fa autoSaveEnabled:fa-check:fa-close'}}></i>
    </a>
    {{/if}}
  </li>
  <li>
    <span class='font-size'>Font-Size:</span>
    <select class='font-size-select selectpicker' data-style='btn-inverse' data-width='auto'>
      <option value='6px'>6px</option>
      <option value='8px'>8px</option>
      <option value='10px'>10px</option>
      <option value='12px'>12px</option>
      <option value='14px'>14px</option>
      <option value='16px' selected>16px</option>
      <option value='20px'>20px</option>
      <option value='24px'>24px</option>
      <option value='32px'>32px</option>
      <option value='48px'>48px</option>
      <option value='52px'>52px</option>
      <option value='64px'>64px</option>
    </select>
  </li>
  <li>
    <span class='font-size'>Page Width:</span>
    <select class='page-width-select selectpicker' data-style='btn-inverse' data-width='auto'>
      <option value='.5'>50%</option>
      <option value='.75'>75%</option>
      <option value='.90'>90%</option>
      <option value='1' selected>100%</option>
      <option value='1.1'>110%</option>
      <option value='1.25'>125%</option>
      <option value='1.5'>150%</option>
      <option value='2'>200%</option>
      <option value='2.5'>250%</option>
    </select>
  </li>
  <li>
    <a href='' class='btn btn-link share-link' {{action 'toggleShareMenu'}}>
      Share
    </a>
  </li>
  <li>
    <a href='' class='btn btn-link' data-toggle='tooltip' data-placement='bottom' title='Help' {{action 'toggleHelpPanel'}}>
      <i class='fa fa-question-circle'></i>
    </a>
  </li>
  <li>
    <a href='#' class='btn btn-link' data-toggle='tooltip' data-placement='bottom' title='Logout' {{action 'logout'}}>
      <i class='fa fa-sign-out'></i>
    </a>
  </li>
  <li {{bind-attr class='saved:text-success error:text-danger'}}>
    {{saved}}{{error}}
  </li>
</ul>

{{init-tooltips}}

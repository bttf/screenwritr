<!-- modal dialog -->
<div class='modal fade confirm-delete-modal-sm' tabindex='-1'>
  <div class='modal-dialog'>
    <div class='modal-content delete-modal'>
      <div class='modal-header'>
        {{controllers.index.entry.title}}
      </div>
      <div class='modal-body'>
        Are you sure you want to delete <b>"{{controllers.index.entry.title}}"</b>?
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-default' data-dismiss='modal'>Cancel</button>
        <button type='button' class='btn btn-primary' data-dismiss='modal' {{action 'deleteEntry' controllers.index.entry}}>Confirm</button>
      </div>
    </div>
  </div>
</div>
<!-- end modal dialog -->

{{#each entry in controller}}

{{ entry-select action='selectEntry' entry=entry selected=entry.selected }}

{{/each}}
